<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" /> <!-- ESSENCIAL -->
  <title>YankSV</title>
  <style>
    body {
      font-family: sans-serif;
      max-width: 600px;
      margin: auto;
      padding: 2rem;
      width: 100%;
      box-sizing: border-box;
    }

    input, button { 
      padding: 10px;
      font-size: 1rem;
      margin-top: 10px;
    }

    .error {
      color: red;
    }

    .card {
      border: 1px solid #d8d8d8;
      text-align: center;
      padding: 20px;
      border-radius: 20px;
      margin-top: 20px;
    }

    img {
      max-width: 100%;
      height: auto;
      border-radius: 20px;
      display: block;
      margin: 0 auto;
    }

    .options {
      display: flex;
      justify-content: center;
      margin-top: 20px;
      gap: 10px;
      flex-wrap: wrap;
    }

    @media (max-width: 400px) {
      .options {
        flex-direction: column;
        gap: 5px;
      }
    }

    .button {
      text-decoration: none;
      color: black;
      padding: 10px;
      background-color: yellow;
      font-weight: bold;
      cursor: pointer;
      border-radius: 10px;
      text-align: center;
      display: inline-block;
      user-select: none;
    }
  </style>
</head>

<body>
  <h1>YankSV - Baixe do Youtube</h1>

  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>

  <form action="/download" method="POST">
    <input type="text" name="url" placeholder="Cole a URL do vídeo aqui" required />
    <button class="button" type="submit">Buscar vídeo</button>
  </form>

  <% if (videoInfo) { %>
    <div class="card">
      <h3><%= videoInfo.title %></h2>
      <h4><%= videoInfo.channel %></h2>
      <img src="<%= videoInfo.thumbnail %>" width="400" />
      <div class="options">
        <a href="/mp4?url=<%= encodeURIComponent(videoInfo.url) %>&title=<%= encodeURIComponent(videoInfo.title) %>" class="button">
          Baixar Vídeo
        </a>
        <a href="/mp3?url=<%= encodeURIComponent(videoInfo.url) %>&title=<%= encodeURIComponent(videoInfo.title) %>" class="button">
          Baixar Áudio
        </a>
      </div>
    </div>
  <% } %>
</body>
</html>
